<table>
    {% for group_roles in (composition.group1, composition.group2) %}
        {% set group_roles = compositions_module.sort_roles(group_roles) %}
        <tr>
            {% for i in range(5) %}
                {% if i < (group_roles | length) %}
                    <td data-role-id="{{ group_roles[i].id_ | e }}">
                        <a href="#role-{{ group_roles[i].id_ | e }}">
                            {% set role_id = group_roles[i].id_ %}
                            {% include 'include/gw2/role-icon.html.j2' %}
                        </a>
                    </td>
                {% else %}
                    <td class="empty"></td>
                {% endif %}
            {% endfor %}
        </tr>
    {% endfor %}
</table>
